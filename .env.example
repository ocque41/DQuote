# Database (Neon + Prisma)
DATABASE_URL="postgresql://USER:PASS@neon-host/db?sslmode=require"
DIRECT_URL="postgresql://USER:PASS@neon-host/db?sslmode=require" # optional non-pooled connection for migrations

# Neon Auth
NEXT_PUBLIC_STACK_PROJECT_ID="project-id-from-neon-auth"
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY="publishable-client-key"
STACK_SECRET_SERVER_KEY="secret-server-key"

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
BLOB_READ_WRITE_TOKEN="vercel-blob-rw-token" # enables uploads via /api/blob/upload
DEMO_PROPOSAL_SHARE_ID="dq-demo-aurora" # optional override for the admin analytics dashboard

# Vercel Blob storage
BLOB_READ_WRITE_TOKEN="vercel-blob-rw-token"

# Stripe
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Puppeteer (optional - set if deploying with a custom Chromium binary)
PUPPETEER_EXECUTABLE_PATH=""

# Email SMTP (for acceptance receipts)
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="apikey"
SMTP_PASSWORD="your-smtp-password"
EMAIL_FROM="DQuote <noreply@yourdomain.com>"

# Security
ENCRYPTION_KEY="generate_a_32_char_key"
